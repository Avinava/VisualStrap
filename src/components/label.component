<apex:component access="global">
    <apex:attribute name="type" type="String" description="Label component for VF" default="default" access="global"/>    
    <apex:attribute name="style" type="String" description="A inline style that to be applied to the component" access="global" required="false"/>
    <span class="label label-{!type}" style="{!style}">
        <apex:componentBody />
    </span>
</apex:component>